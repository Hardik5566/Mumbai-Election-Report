            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const areas = document.querySelectorAll('area');
                    const tooltip = document.getElementById('tooltip');
                    const tipTitle = document.getElementById('tip-title');
                    const tipDesc = document.getElementById('tip-desc');

                    areas.forEach(area => {
                        area.addEventListener('mouseenter', function(e) {
                            const title = this.getAttribute('data-title');
                            const desc = this.getAttribute('data-desc');
                            
                            tipTitle.textContent = title || 'No Title';
                            tipDesc.textContent = desc || 'No description available';
                            tooltip.style.display = 'block';
                        });

                    area.addEventListener('mousemove', function(e) {
                        // Position relative to viewport
                        tooltip.style.left = (e.clientX + 15) + 'px';
                        tooltip.style.top = (e.clientY + 15) + 'px';
                    });

                    area.addEventListener('mouseleave', function() {
                        tooltip.style.display = 'none';
                    });
                });
                    
                // Hide tooltip when mouse leaves the map area
                document.querySelector('.map-wrapper').addEventListener('mouseleave', function() {
                    tooltip.style.display = 'none';
                });
                });
